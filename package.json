{
  "name": "@waldbaer/node-red-retry",
  "version": "1.0.0",
  "description": "Configurable retry mechanism for Node-RED flows.",
  "author": "waldbaer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/waldbaer/node-red-retry.git"
  },
  "keywords": [
    "node-red",
    "retry",
    "retries",
    "error",
    "errorhandling"
  ],
  "node-red": {
    "version": ">=1.3.0",
    "nodes": {
      "retry": "nodes/retry.js"
    }
  },
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
  },
  "devDependencies": {
    "eslint": "^8.48.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.0.2",
    "eslint-plugin-promise": "^6.1.1",
    "mocha": "^10.2.0",
    "mocha-suppress-logs": "^0.5.1",
    "nyc": "^15.1.0",
    "node-red": "^3.1.0",
    "node-red-node-test-helper": "^0.3.4",
    "node-red-dev": "^0.1.6"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "google"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "require-jsdoc": "off",
      "max-len": [
        2,
        {
          "code": 140,
          "tabWidth": 2,
          "ignoreUrls": true
        }
      ],
      "indent": [
        "error",
        2
      ]
    },
    "plugins": [
      "html"
    ]
  },
  "scripts": {
    "test": "mocha --timeout 10000 --require mocha-suppress-logs \"test/**/*_spec.js\"",
    "test_verbose": "mocha --timeout 10000 \"test/**/*_spec.js\"",
    "coverage": "nyc --reporter=lcov npm test",
    "coverage_local": "nyc npm test",
    "node-red-dev-validate": "node-red-dev validate -p ."
  }
}
